{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/frontend/api/$1" }
  ],
  "builds": [
    {
      "src": "frontend/api/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/src/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "cleanUrls": true,
  "outputDirectory": "frontend/build"
}
